<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="BanquePU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/BanqueDS</jta-data-source>
        
        <class>com.banque.compte.entity.Client</class>
        <class>com.banque.compte.entity.TypeCompte</class>
        <class>com.banque.compte.entity.Compte</class>
        <class>com.banque.compte.entity.TypeOperation</class>
        <class>com.banque.compte.entity.Operation</class>
        
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.connection.autocommit" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
